APP_PORT=8000

RUN_MIGRATIONS=true
WAIT_FOR_DB=true

# Docker runtime DB defaults (force mysql inside containers)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=schat
DB_USERNAME=schatb
DB_PASSWORD=secret

# Reverb:
# - Backend containers should reach reverb via service name.
# - Browser should connect to localhost through published port.
REVERB_HOST=reverb
REVERB_SERVER_HOST=0.0.0.0
VITE_REVERB_HOST=localhost

# Database notes:
# - docker/.env.docker overrides .env values for container runtime.
# - MySQL service init vars: MYSQL_DATABASE, MYSQL_USER, MYSQL_PASSWORD, MYSQL_ROOT_PASSWORD
MYSQL_DATABASE=schat
MYSQL_USER=schatb
MYSQL_PASSWORD=secret
MYSQL_ROOT_PASSWORD=root
